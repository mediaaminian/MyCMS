@model MyCMS.Model.LogOnModel
@{
    ViewBag.Title = "ورود به سایت";
}
<div class="container clearfix" style="width:500px;">
    <div class="col-md-12 bottommargin">
        <div class="panel panel-default events-meta">
            <div class="panel-heading">
                <h3 class="panel-title">ورود به سایت</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm(MVC.User.ActionNames.LogOn, MVC.User.Name, FormMethod.Post, new { @class = "form-horizontal", id = "frmLogOn" }))
            {


                    @Html.AntiForgeryToken()
                    @Html.Hidden("returnUrl", ViewBag.ReturnUrl as string)


                    <div class="col_full" style="margin-bottom: 10px;">
                        <label for="Identity">ایمیل یا نام کاربری</label>
                        @Html.TextBoxFor(user => user.Identity, new { placeholder = "Email or Username", @class = "ltr sm-form-control" })
                    </div>
                    <div class="col_full" style="margin-bottom: 10px;">
                        <label for="Password">کلمه عبور</label>
                        @Html.PasswordFor(user => user.Password, new { placeholder = "Password", @class = "ltr  sm-form-control" })
                    </div>


                    <div class="col_full" style="margin-bottom: 10px;">

                        <label class="checkbox">
                            @Html.CheckBox("RememberMe", true)مرا به یاد داشته باش
                        </label>
                    </div>

                    <input type="submit" class="button button-mini button-dark button-rounded currn" id="btnLogOn" name="name" value="ورود" />

                    <div id="aa-result"></div>
                    @Html.ValidationSummary()
                }
            </div>
        </div>
    </div>
</div>


