<body class="login" style="background-color: #fff;">

    <!-- BEGIN : LOGIN PAGE 5-1 -->
    <div class="user-login-5">
        <div class="row bs-reset">
            <div class="col-md-6 bs-reset mt-login-5-bsfix">
                <div class="login-bg" style="background-image:url(/Content/Admin/css/images/bg1.jpg) !important;">
                </div>
            </div>
            <div class="col-md-6 login-container bs-reset mt-login-5-bsfix">
                <div class="login-content">
                    <h1>ورود به سیستم</h1>
                    <p>
                        برای ورود به سیستم از کلمه کاربری و کلمه عبور خود استفاده نمایید ، برای ورود میتوانید به جای نام کاربری از آدرس ایمیل خود استفاده کنید.
                        @*و در صورتیکه کلمه عبور خود را فراموش کرده اید از لینک بازیابی کلمه عبور استفاده نمائید*@
                    </p>
                    @using (Html.BeginForm(MVC.User.ActionNames.LogOn, MVC.User.Name, FormMethod.Post, new { @class = "login-form", id = "frmLogOn" }))
                    {


                        @Html.AntiForgeryToken()
                        @Html.Hidden("returnUrl", ViewBag.ReturnUrl as string)

                        @*<form action="javascript:;" class="login-form" method="post">*@
                        @*<div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            <span>لطفا نام کاربری و کلمه عبور را صحیح وارد نمایید <br /><br /></span>
                        </div>*@
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                        <div class="row">
                            <div class="col-xs-6">
                                @*<input class="form-control form-control-solid placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="نام کاربری" name="username" required />*@
                                @Html.TextBoxFor(user => user.Identity, new { placeholder = "نام کاربری یا ایمیل", autocomplete = "off", @class = "form-control form-control-solid placeholder-no-fix form-group required" })
                            </div>
                            <div class="col-xs-6">
                                @*<input class="form-control form-control-solid placeholder-no-fix form-group" type="password" autocomplete="off" placeholder="کلمه عبور" name="password" required />*@
                                @Html.PasswordFor(user => user.Password, new { placeholder = "کلمه عبور", autocomplete = "off", @class = "form-control form-control-solid placeholder-no-fix form-group required" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="rem-password">
                                    <label class="rememberme mt-checkbox mt-checkbox-outline">
                                        @Html.CheckBox("RememberMe", true) مرا به خاطر بسپار
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-8 text-right">
                                <div class="forgot-password">
                                    @*<a href="javascript:;" id="forget-password" class="forget-password">کلمه عبور خود را فراموش کرده اید ؟</a>*@
                                    @if (ViewBag.ShowCaptcha!=null && ViewBag.ShowCaptcha) {
                                    @Html.Captcha(5, MVC.Shared.Views.DefaultCaptcha)
                                    }
                                </div>
                                @*<button class="btn green" type="submit">ورود</button>*@
                                <input type="submit" class="btn green" id="btnLogOn" name="name" value="ورود" />
                                <div id="aa-result"></div>
                                
                            </div>
                        </div>
                    }
                    @*</form>*@
                    <!-- BEGIN FORGOT PASSWORD FORM -->
                    @*<form class="forget-form" action="javascript:;" method="post">
