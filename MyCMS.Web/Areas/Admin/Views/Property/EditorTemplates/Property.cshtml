
@model MyCMS.Model.AdminModel.PropertyModel


<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>
<div class="editor-label">
    @Html.LabelFor(model => model.PropertyGroupID)
</div>
<div class="editor-field">
    @(Html.Kendo().DropDownListFor(q => q.PropertyGroupID)
        .DataTextField("Name")                                          
        .DataValueField("ID")
        .DataSource(ds => ds.Read("GetDropDown", "PropertyGroup")))

    @Html.ValidationMessageFor(model => model.PropertyGroupID)
</div>
<div class="editor-label">
    @Html.LabelFor(model => model.DataType)
</div>
<div class="editor-field">
@(Html.Kendo().DropDownListFor(q => q.DataType)
        .DataTextField("Description")
        .DataValueField("Value")
        .DataSource(ds => ds.Read("GetDataTypeDropDown", "Property")))
    
    @Html.ValidationMessageFor(model => model.DataType)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.DefaultValue)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.DefaultValue)
    @Html.ValidationMessageFor(model => model.DefaultValue)
</div>


<div class="editor-label">
    @Html.LabelFor(model => model.IsVisibleInProductDetail)
</div>
<div class="editor-field">
    @Html.CheckBoxFor(model => model.IsVisibleInProductDetail)
    @Html.ValidationMessageFor(model => model.IsVisibleInProductDetail)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.IsVisibleInNotification)
</div>
<div class="editor-field">
    @Html.CheckBoxFor(model => model.IsVisibleInNotification)
    @Html.ValidationMessageFor(model => model.IsVisibleInNotification)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.IsVisibleInAdvertisements)
</div>
<div class="editor-field">
    @Html.CheckBoxFor(model => model.IsVisibleInAdvertisements)
    @Html.ValidationMessageFor(model => model.IsVisibleInAdvertisements)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.IsFilterable)
</div>
<div class="editor-field">
    @Html.CheckBoxFor(model => model.IsFilterable)
    @Html.ValidationMessageFor(model => model.IsFilterable)
</div>






<div class="editor-label">
    @Html.LabelFor(model => model.Priority)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Priority)
    @Html.ValidationMessageFor(model => model.Priority)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Status)
</div>
<div class="editor-field">
    @(Html.Kendo().DropDownListFor(q => q.Status)
    .BindTo(new List<SelectListItem>() { new SelectListItem() { Text = "فعال", Value = "1" }, new SelectListItem() { Text = "غیر فعال", Value = "0" } })
    )
    @Html.ValidationMessageFor(model => model.Status)
</div>


<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.TextAreaFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</div>
