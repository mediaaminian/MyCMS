    <script>
        function submitClick(event) {
            $('button.close').click();
            $('.btn-submit').addClass('disabled');
            $('.btn-submit').parents('form:first').submit();
            setTimeout("$('.btn-submit').removeClass('disabled')", 2000);            

        }
        $('.btn-submit').live('click', function (event) {
            submitClick(event);
        });
        $('#dialog .span12 .alert:last').live('DOMNodeInserted DOMNodeRemoved', function () {
            $('#dialog .span12 .alert:first').hide();
            $('#dialog .btn.btn-success').hide();
            $('#dialog #btnClose').hide();
            $('#dialog .btn-RefreshParent').removeClass('hide').show();
        });
     
        $('#dialog .btn-RefreshParent,.page-sidebar-menu .nav-item').live('click', function () {
            if ($('#dialog').is(':visible') && $('#dialog').dialog('isOpen'))
                $('#dialog').dialog('close');
        });

