<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="alert">
                <strong>هشدار!</strong> آیا شما از حذف این @ViewBag.EntityName مطمئن هستید؟
            </div>
            @using (Ajax.BeginForm((string)ViewBag.DeleteActionName, (string)ViewBag.ControllerName, new { id = ViewBag.Id }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnBegin = "showLoading", UpdateTargetId = "result", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading" }, null))
            {
                @Html.AntiForgeryToken()
                <div id="result"></div>
                <input type="button" id="btn-add" class="btn btn-success btn-submit" value="تایید" />
                <input type="button" id="btnClose" class="btn btn-danger" name="btnCancel" value="انصراف" />
            }
           @Ajax.ActionLink("بازگشت", (string)ViewBag.ReturnActionName, (string)ViewBag.ControllerName, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "main-content", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading", OnBegin = "showLoading" }, new { @class = "btn btn-danger btn-RefreshParent hide" })
        </div>
    </div>
</div>
<script>
    run(function () {
        $('#btnClose').on('click', function () { $dialog.dialog('close'); });        
    });
</script>
