
@model MyCMS.Model.AdminModel.TimeFrameModel
          <script>
              function OnSuccess(e) {
                  var filename = e.response.text;
                  debugger;
                  $("#Picture").val(filename);
                  $("#Picture").blur();
                  $("#Picture").focus();
              }
          </script>
@Html.HiddenFor(model => model.Picture)

<div class="editor-label">
    @Html.LabelFor(model => model.Title)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title)
</div>
<div class="editor-label">
    @Html.LabelFor(model => model.Days)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Days)
    @Html.ValidationMessageFor(model => model.Days)
</div>
<div class="editor-label">
    @Html.LabelFor(model => model.Picture)
</div>
<div class="editor-field">
@(Html.Kendo().Upload()
            .Name("PictureFile")
            .Events(e=>e.Success("OnSuccess"))
            .Async(a => a
                .AutoUpload(true)
                .Save("uploadFile", "TimeFrame")
            )
            
)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Link)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Link)
    @Html.ValidationMessageFor(model => model.Link)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Priority)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Priority)
    @Html.ValidationMessageFor(model => model.Priority)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Status)
</div>
<div class="editor-field">
    @(Html.Kendo().DropDownListFor(q => q.Status)
    .BindTo(new List<SelectListItem>() { new SelectListItem() { Text = "فعال", Value = "1" }, new SelectListItem() { Text = "غیر فعال", Value = "0" } })
    )
    @Html.ValidationMessageFor(model => model.Status)
</div>

