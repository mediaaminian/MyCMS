@model MyCMS.Model.AdminModel.EditLabelModel
<div class="container-fluid" id="div-user-detail">
    @using (Ajax.BeginForm(MVC.Admin.Label.ActionNames.Edit, MVC.Admin.Label.Name, new AjaxOptions { UpdateTargetId = "result", InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnBegin = "showLoading", OnComplete = "hideLoading" }, new { @class = "form-horizontal", id = "add-label-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(label => label.Id)
        <div class="control-group">
            <label class="control-label" for="Name">نام برچسب</label>
            <div class="controls">
                @Html.TextBoxFor(label => label.Name, new { placeholder = "نام برچسب", @class = "form-control input-large" })
            </div>
            @Html.ValidationMessageFor(label => label.Name)
        </div>
        <div class="control-group">
            <label class="control-label" for="Description">توضیحات</label>
            <div class="controls">
                @Html.TextBoxFor(label => label.Description, new { placeholder = "توضیحات", @class = "form-control input-large" })
            </div>
            @Html.ValidationMessageFor(label => label.Description)
        </div>
        <div id="result"></div>
        <br />
        <input type="button" name="btn-submit" value="انجام ویرایش" class="btn btn-success btn-submit" />
        <input type="button" name="btn-colose" id="btn-close" value="انصراف" class="btn btn-danger" onclick="$dialog.dialog('close');" />
    }
</div>
