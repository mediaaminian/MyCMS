<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="alert">
                <strong>هشدار!</strong> آیا شما از حذف این برچسب مطمئن هستید؟
            </div>
            @using (Ajax.BeginForm(MVC.Admin.Label.ActionNames.Delete, MVC.Admin.Label.Name, new { id = ViewBag.LabelId }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnBegin = "showLoading", UpdateTargetId = "result", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading" }, null))
            {
                @Html.AntiForgeryToken()
                <div id="result"></div>
                <input type="submit" class="btn btn-success" value="تایید" />
                <input type="button" id="btnClose" class="btn btn-danger" name="btnCancel" value="انصراف" onclick="$dialog.dialog('close');" />
            }
            @Ajax.ActionLink("بازگشت", MVC.Admin.Label.ActionNames.Index, MVC.Admin.Label.Name, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "main-content", OnSuccess = "loadAjaxComponents", OnComplete = "hideLoading", OnBegin = "showLoading" }, new { @class = "btn btn-danger btn-RefreshParent hide" })
        </div>
    </div>
</div>
<script>
    run(function () {
        $('#btnClose').on('click', function () { $dialog.dialog('close'); });
    });
</script>